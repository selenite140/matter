import("//build_overrides/chip.gni")

config("libtrustymatter_config") {
  include_dirs = [ "repo/include" ]

  cflags = [ "-Wno-implicit-fallthrough" ]
  cflags_cc = [ "-std=c++17" ]
}

source_set("libtrustymatter") {
  sources = [
    "repo/trusty_matter.cpp",
    "repo/trusty_matter_ipc.cpp",
    "repo/matter_messages.cpp",
    "repo/serializable.cpp",
    "repo/include/mem.h",
    "repo/include/matter_defs.h",
    "repo/include/matter_ipc.h",
    "repo/include/matter_messages.h",
    "repo/include/serializable.h",
    "repo/include/trusty_matter.h",
    "repo/include/trusty_matter_ipc.h",
    "repo/include/UniquePtr.h",
  ]

  public_configs = [ ":libtrustymatter_config" ]

  public_deps = [ "${chip_root}/third_party/libtrusty" ]
}
